        <GridSplitter x:Name="RightPanel" Grid.Column="1" HorizontalAlignment="Stretch" Margin="213,0,0,0" Grid.Row="1" Height="286" VerticalAlignment="Bottom" Background="{x:Null}"/>
        <ListBox x:Name="Selector" Grid.Column="1" HorizontalAlignment="Left" Height="269" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="198" SelectionChanged="Selector_SelectionChanged"/>
