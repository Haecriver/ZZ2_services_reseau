@model SiteWebJediTournament.Models.StadeModels

@{
    ViewBag.Title = "Ajout d'un stade";
}

<h2>Ajout d'un stade</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        <h4>Proriétés</h4>
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Planete, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Planete)
                @Html.ValidationMessageFor(model => model.Planete)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NbPlaces, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NbPlaces)
                @Html.ValidationMessageFor(model => model.NbPlaces)
            </div>
        </div>

        <hr />
        <h4>Choix des caractéristiques</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.Caracts, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Action("ListCaracteristiqueStade", "Caracteristique")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Créer" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
