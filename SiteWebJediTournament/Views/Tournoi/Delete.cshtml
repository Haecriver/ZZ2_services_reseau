@model SiteWebJediTournament.Models.TournoiModels

@{
    ViewBag.Title = "Suppression d'un tournoi";
}

<h2>Suppression d'un tournoi</h2>

<h3>Etes-vous bien sûr de vouloir supprimer ce tournoi ?</h3>
<div>
    
    <hr />
    <h4>Propriétés</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            @Html.ActionLink("Retour à la liste", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    }
</div>
