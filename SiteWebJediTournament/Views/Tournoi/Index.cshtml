@model IEnumerable<SiteWebJediTournament.Models.TournoiModels>

@{
    ViewBag.Title = "Tournois";
}

<h2>Gestion du Tournoi</h2>
<img src="Images/combat.png" alt="combat"/>

<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
                    @Html.ActionLink("Détails et Jouer", "Details", new { id = item.Id, bank = 500 }, htmlAttributes: new { @class = "btn btn-info btn-xs" })
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
        </td>
</tr>
}
    </tbody>
</table>
