@model SiteWebJediTournament.Models.TournoiModels

<div>
    <h4>TournoiModels @Html.DisplayFor(model => Model.Matches.List[0].PhaseTournoi) </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

    </dl>
    <h5 @Html.DisplayNameFor(model => model.Matches)></h5>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matches.Default.Jedi1.Default.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.Default.Jedi2.Default.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.Default.Stade.Default.Planete)
            </th>
        </tr>

        @foreach (var item in Model.Matches.List)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Jedi1.Jedi.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jedi2.Jedi.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stade.Stade.Planete)
                </td>
                <td>
                    @Html.ActionLink("Edit", "../Caracteristique/Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "../Caracteristique/Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "../Caracteristique/Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
<p>
    <div>Dans votre banque : @Html.DisplayFor(model => Model.Bank)  </div>
    

    
    
    <div>Combien Parier :</div>
    @Html.TextBoxFor(x=>x.bet,new { @Value = 0})

    @Html.ActionLink("Play !", "Play", new { id = Model.Id, bank = Model.Bank })

</p>
