@model SiteWebJediTournament.Models.TournoiModels

<div>
    <hr />
    <h4>Détails de @Html.DisplayFor(model => Model.Nom) - @Html.DisplayFor(model => Model.Matches.List[0].PhaseTournoi) </h4>
    
    <hr />
    <h4>Propriétés</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

    </dl>
    <hr />
    <h4>@Html.DisplayNameFor(model => model.Matches)</h4>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matches.Default.Jedi1.Default.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.Default.Jedi2.Default.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Matches.Default.Stade.Default.Planete)
            </th>
                <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Matches.List)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Jedi1.Jedi.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jedi2.Jedi.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stade.Stade.Planete)
                </td>
                <td>
                        @Html.ActionLink("Modifier", "../Caracteristique/Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
                        @Html.ActionLink("Détails", "../Caracteristique/Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-xs" })
                        @Html.ActionLink("Supprimer", "../Caracteristique/Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
        }
        </tbody>

    </table>

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    <h4>Lancer le tournoi</h4>
    <div class="form-horizontal">

        <div class="form-group">
            <label for="bet" class="control-label col-md-2">
                Argent en banque
            </label>
            <div class="col-md-10">
                <input class="text-box single-line" data-val="true" data-val-number="Le champ A parier doit être un nombre." 
                       data-val-required="Le champ A parier est requis." id="bet" name="bet" readonly="readonly" type="number" value=@Model.bank />
                <span class="field-validation-valid" data-valmsg-for="bet" data-valmsg-replace="true"></span>
            </div>
        </div>


        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.bet, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.bet)
                @Html.ValidationMessageFor(model => model.bet)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.jediBet, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="jediBet" id="jediBet">
                    @Html.Action("ListJedi", "Jedi")
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Parier" class="btn btn-success" />
            </div>
        </div>



    </div>
}

<p>
    @Html.ActionLink("Retour à la liste", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
