@model SiteWebJediTournament.Models.TournoiModels

<div>
    <h4>Modification de @Html.DisplayFor(model => Model.Nom) - @Html.DisplayFor(model => Model.Matches.List[0].PhaseTournoi) </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

    </dl>
    <h5 @Html.DisplayNameFor(model => model.Matches)></h5>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Matches.Default.Jedi1.Default.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Matches.Default.Jedi2.Default.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Matches.Default.Stade.Default.Planete)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Matches.List)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jedi1.Jedi.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jedi2.Jedi.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stade.Stade.Planete)
                    </td>
                    <td>
                        @Html.ActionLink("Modifier", "../Match/Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
                        @Html.ActionLink("Détails", "../Match/Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-xs" })
                        @Html.ActionLink("Supprimer", "../Match/Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
<p>
    @Html.ActionLink("Retour à la liste", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<hr />
<form class="form-horizontal" action="" method="post">
    <fieldset>
        <legend>Jeu</legend>
        <!--<div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="inputEmail" placeholder="Email">
            </div>
        </div>-->
        <div class="form-group">
            <label for="Bank" class="col-lg-2 control-label">Dans votre banque</label>
            <div class="col-lg-10">
                <span class="badge">@Html.DisplayFor(model => Model.Bank)</span>
            </div>
        </div>

        <div class="form-group">
            <label for="bet" class="col-lg-2 control-label">Combien Parier</label>
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.bet, new { @Value = 0 })
            </div>
        </div>

        @Html.ActionLink("Jouer !", "Play", new { id = Model.Id, bank = Model.Bank }, htmlAttributes: new { @class = "btn btn-success" })
    </fieldset>
</form>
