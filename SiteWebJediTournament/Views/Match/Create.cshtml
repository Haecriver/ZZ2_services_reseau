@model SiteWebJediTournament.Models.MatchModels

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MatchModels</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Jedi1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="jediselect1" id="jediselect1">
                    @Html.Action("ListJedi", "Jedi")
                </select>
            </div>
        </div>
       <div class="form-group">
            @Html.LabelFor(model => model.Jedi2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="jediselect2" id="jediselect2">
                    @Html.Action("ListJedi", "Jedi")
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PhaseTournoi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    <select name="phaseselect" id="phaseselect">
                        <option value="HuitiemeFinale">HuitiemeFinale</option>    
                        <option value="QuartFinale">QuartFinale</option>
                        <option value="DemiFinale">DemiFinale</option>
                        <option value="Finale">Finale</option>
                    </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Stade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="stadeselect" id="stadeselect">
                    @Html.Action("ListStade", "Stade")
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
