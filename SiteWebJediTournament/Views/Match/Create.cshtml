@model SiteWebJediTournament.Models.MatchModels

@{
    ViewBag.Title = "Création de match";
}

<h2>Ajout d'un match</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        <h4>Propriétés</h4>
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Jedi1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="jediselect1" id="jediselect1">
                    @Html.Action("ListJedi", "Jedi")
                </select>
            </div>
        </div>
       <div class="form-group">
            @Html.LabelFor(model => model.Jedi2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="jediselect2" id="jediselect2">
                    @Html.Action("ListJedi", "Jedi")
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PhaseTournoi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    <select class="form-control" name="phaseselect" id="phaseselect">
                        <option value="HuitiemeFinale">HuitiemeFinale</option>    
                        <option value="QuartFinale">QuartFinale</option>
                        <option value="DemiFinale">DemiFinale</option>
                        <option value="Finale">Finale</option>
                    </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Stade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="stadeselect" id="stadeselect">
                    @Html.Action("ListStade", "Stade")
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Créer" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
