@model IEnumerable<SiteWebJediTournament.Models.JediModels>

@{
    ViewBag.Title = "Jedis";
}

<h2>Gestion des Jedis</h2>

<p>
    @Html.ActionLink("Ajouter un Jedi", "Create", null, htmlAttributes: new { @class = "btn btn-success btn-sm" })
</p>
<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSith)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsSith)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
            @Html.ActionLink("Détails", "Details", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-info btn-xs" })
            @Html.ActionLink("Supprimer", "Delete", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}
    </tbody>
</table>
