@{
    ViewBag.Title = "Accueil";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-lg-6">
            <img src="~/Images/Master_Yoda.png" alt="Yoda"/>
        </div>
        <div class="col-lg-6">
            <h1>Gestion de tournoi de Jedis</h1>
            <h4 class="text-primary">Développé en .NET</h4>
            <hr />
            @if (Request.IsAuthenticated)
            {
                <p class="text-justify"> Pour gérer le jeu, choisissez une action dans le menu Gestion, ou bien cliquez sur l'un des boutons ci-dessous.</p>
                <hr />
                <div class="flow">
                    <a class="btn btn-primary" href="@Url.Action("Index","Jedi")">Gérer les Jedis</a>
                    <a class="btn btn-primary" href="@Url.Action("Index","Caracteristique")">Gérer les Caractéristiques</a>
                    <a class="btn btn-primary" href="@Url.Action("Index","Match")">Gérer les Matchs</a>
                    <a class="btn btn-primary" href="@Url.Action("Index","Stade")">Gérer les Stades</a>
                    <a class="btn btn-primary" href="@Url.Action("Index","Tournoi")">Gérer le Tournoi</a>
                </div>
                <hr />
                <blockquote class="blockquote-reverse">
                    <p>May the force be with you.</p>
                    <small>Someone famous in <cite title="Star Wars">Star Wars</cite></small>
                </blockquote>
            } else {
                <p class="text-warning">Pour jouer, veuillez d'abord vous connecter.</p>
            }
        </div>
    </div>
</div>